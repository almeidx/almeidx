{
	"name": "website",
	"private": true,
	"homepage": "https://almeidx.dev",
	"scripts": {
		"build": "next build",
		"dev": "next dev",
		"fmt": "pnpm format",
		"format": "prettier --write . && eslint src --ext ts,tsx --fix",
		"postinstall": "husky install .github/husky",
		"lint": "prettier --check . && eslint src --ext ts,tsx",
		"start": "next start"
	},
	"lint-staged": {
		"*.tsx": "eslint --fix",
		"*.{ts,tsx,js,json}": "prettier --write"
	},
	"prettier": {
		"printWidth": 120,
		"trailingComma": "all",
		"useTabs": true
	},
	"eslintConfig": {
		"parserOptions": {
			"project": "./tsconfig.eslint.json"
		},
		"settings": {
			"react": {
				"version": "detect"
			}
		},
		"extends": [
			"neon/common",
			"neon/browser",
			"neon/typescript",
			"neon/react",
			"neon/next",
			"neon/prettier",
			"plugin:tailwindcss/recommended"
		],
		"rules": {
			"default-case": 0,
			"no-duplicate-imports": 2,
			"no-warning-comments": 0,
			"prefer-named-capture-group": 0,
			"@typescript-eslint/consistent-type-definitions": [
				2,
				"interface"
			]
		},
		"ignorePatterns": [
			".next/*",
			".vercel/*",
			"node_modules/*",
			"next-env.d.ts"
		],
		"root": true
	},
	"resolutions": {
		"@angular-eslint/eslint-plugin": "npm:@almeidx/empty@1.0.1",
		"@angular-eslint/eslint-plugin-template": "npm:@almeidx/empty@1.0.1",
		"@angular-eslint/template-parser": "npm:@almeidx/empty@1.0.1",
		"astro-eslint-parser": "npm:@almeidx/empty@1.0.1",
		"eslint-plugin-astro": "npm:@almeidx/empty@1.0.1",
		"eslint-plugin-cypress": "npm:@almeidx/empty@1.0.1",
		"eslint-plugin-jest": "npm:@almeidx/empty@1.0.1",
		"eslint-plugin-mdx": "npm:@almeidx/empty@1.0.1",
		"eslint-plugin-rxjs": "npm:@almeidx/empty@1.0.1",
		"eslint-plugin-rxjs-angular": "npm:@almeidx/empty@1.0.1",
		"eslint-plugin-svelte3": "npm:@almeidx/empty@1.0.1",
		"eslint-plugin-vue": "npm:@almeidx/empty@1.0.1",
		"vue-eslint-parser": "npm:@almeidx/empty@1.0.1"
	},
	"dependencies": {
		"next": "^13.4.7",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^4.10.1",
		"tslib": "^2.6.0"
	},
	"devDependencies": {
		"@types/node": "^20.3.2",
		"@types/react": "^18.2.14",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.43.0",
		"eslint-config-neon": "^0.1.47",
		"eslint-plugin-tailwindcss": "^3.13.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.3",
		"postcss": "^8.4.24",
		"prettier": "^2.8.8",
		"tailwindcss": "^3.3.2",
		"typescript": "~5.1.3"
	},
	"packageManager": "pnpm@8.6.1",
	"engines": {
		"node": "18"
	}
}
