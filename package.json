{
	"name": "website",
	"private": true,
	"homepage": "https://almeidx.dev",
	"scripts": {
		"build": "next build",
		"dev": "next dev",
		"fmt": "pnpm format",
		"format": "prettier --write . && eslint src --ext ts,tsx --fix",
		"postinstall": "husky install .github/husky",
		"lint": "prettier --check . && eslint src --ext ts,tsx",
		"start": "next start"
	},
	"lint-staged": {
		"*.tsx": "eslint --fix",
		"*.{ts,tsx,js,json}": "prettier --write"
	},
	"prettier": {
		"printWidth": 120,
		"useTabs": true
	},
	"eslintConfig": {
		"parserOptions": {
			"project": "./tsconfig.eslint.json"
		},
		"settings": {
			"react": {
				"version": "detect"
			}
		},
		"extends": [
			"neon/common",
			"neon/browser",
			"neon/typescript",
			"neon/react",
			"neon/next",
			"neon/prettier",
			"plugin:tailwindcss/recommended"
		],
		"rules": {
			"default-case": 0,
			"no-duplicate-imports": 2,
			"no-warning-comments": 0,
			"prefer-named-capture-group": 0,
			"@typescript-eslint/consistent-type-definitions": [
				2,
				"interface"
			]
		},
		"ignorePatterns": [
			".next/*",
			".vercel/*",
			"node_modules/*",
			"next-env.d.ts"
		]
	},
	"resolutions": {
		"@angular-eslint/eslint-plugin": "npm:@almeidx/empty",
		"@angular-eslint/eslint-plugin-template": "npm:@almeidx/empty",
		"@angular-eslint/template-parser": "npm:@almeidx/empty",
		"astro-eslint-parser": "npm:@almeidx/empty",
		"eslint-mdx": "npm:@almeidx/empty",
		"eslint-plugin-astro": "npm:@almeidx/empty",
		"eslint-plugin-cypress": "npm:@almeidx/empty",
		"eslint-plugin-mdx": "npm:@almeidx/empty",
		"eslint-plugin-rxjs": "npm:@almeidx/empty",
		"eslint-plugin-rxjs-angular": "npm:@almeidx/empty",
		"eslint-plugin-svelte3": "npm:@almeidx/empty",
		"eslint-plugin-vue": "npm:@almeidx/empty",
		"vue-eslint-parser": "npm:@almeidx/empty"
	},
	"dependencies": {
		"next": "^13.5.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^4.11.0",
		"tslib": "^2.6.2"
	},
	"devDependencies": {
		"@types/node": "^20.7.0",
		"@types/react": "^18.2.23",
		"autoprefixer": "^10.4.16",
		"eslint": "^8.50.0",
		"eslint-config-neon": "^0.1.56",
		"eslint-plugin-tailwindcss": "^3.13.0",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"postcss": "^8.4.30",
		"prettier": "^3.0.3",
		"tailwindcss": "^3.3.3",
		"typescript": "~5.2.2"
	},
	"packageManager": "pnpm@8.6.12",
	"engines": {
		"node": "18"
	}
}
